# Server Configuration
PORT=3001
HOST=localhost
NODE_ENV=development

# Database Configuration (Option 1: Individual params - for local)
DB_USER=postgres
DB_HOST=localhost
DB_NAME=lead_scoring_db
DB_PASSWORD=your_password_here
DB_PORT=5432

# Database Configuration (Option 2: Connection string - for Supabase/Render)
# DATABASE_URL=postgresql://postgres:[YOUR_PASSWORD]@db.xxxxx.supabase.co:5432/postgres

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=24h

# ML Service Configuration (Flask API)
ML_SERVICE_URL=http://localhost:5050
ML_API_TIMEOUT=10000

# Auto Predict Configuration
ENABLE_AUTO_PREDICT_CRON=true
AUTO_PREDICT_CRON=*/2 * * * *
AUTO_PREDICT_BATCH_SIZE=50
AUTO_PREDICT_RETRY_DELAY=5000

# Cache Configuration
CACHE_TTL=300
CACHE_CHECK_PERIOD=60
